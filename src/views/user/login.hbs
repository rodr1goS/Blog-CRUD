{{#if errors}}
    <div class="errorsContainer">
        {{#each errors}}
            <div class="msgBoxo error">
                {{dataValues.message}}
            </div>
        {{/each}}
    </div>
{{/if}}
<section class="formContainer">
    <form action="/user/login" method="POST">
    	<h1>Bem vindo!</h1>
        <div class="fieldContainer">
            <span>Email</span>
            <input type="email" name="email" placeholder="(email da conta)" required>
        </div>
        <div class="fieldContainer">
            <span lang="en">Password:</span>
            <input type="password" name="userPassword" placeholder="(senha entre 5 a 18 caracteres)"required>
        </div>
        <button type="submit" lang="en">Sign in</button>
        <a href="/user/register">NÃ£o possui uma conta?</a>
    </form>
</section>
